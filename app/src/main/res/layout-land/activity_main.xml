<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation= "vertical"
    android:background="@drawable/pencil_line_color_paint_pxhere"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context=".MainActivity">
   <GridLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:background="@color/white"

       android:columnCount="4"
       android:rowCount="7">
   <TextView
       android:id="@+id/expression_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_columnSpan="4"
       android:layout_columnWeight="1"
       android:textSize="@dimen/textSize_2"
       android:background="@color/white"
       android:gravity="end"
       android:padding="@dimen/padding"
       android:text="@string/zero"
       android:textColor="@color/black"
        />
   <TextView
       android:id="@+id/result_view"
       android:layout_columnWeight="1"
       android:layout_columnSpan="4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:gravity="end"
       android:padding="@dimen/padding"
       android:text="@string/zero"
       android:textColor="@color/black"
       android:textSize="@dimen/textSize_2"
       />
      <Button
          android:id="@+id/but_clear"
          android:layout_width="wrap_content"

          android:background="@color/my_red"
          android:text="@string/letter_C"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
           />

      <Button
          android:id="@+id/but_bracket1"

          android:background="@color/black"
          android:text="@string/bracket_left"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
         />

      <Button
          android:id="@+id/but_bracket2"

          android:background="@color/black"
          android:text="@string/bracket_right"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_div"
          android:background="@color/black"
          android:text="@string/div"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_7"
          android:background="@color/black"
          android:text="@string/seven"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_8"
          android:background="@color/black"
          android:text="@string/eight"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_9"
          android:background="@color/black"
          android:text="@string/nine"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_mult"
          android:background="@color/black"
          android:text="@string/multiply"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_4"
          android:background="@color/black"
          android:text="@string/four"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_5"
          android:background="@color/black"
          android:text="@string/five"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_6"
          android:background="@color/black"
          android:text="@string/six"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_minus"
          android:background="@color/black"
          android:text="@string/minus"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_1"
          android:background="@color/black"
          android:text="@string/one"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_2"
          android:background="@color/black"
          android:text="@string/two"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_3"
          android:background="@color/black"
          android:text="@string/three"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_plus"
          android:background="@color/black"
          android:text="@string/plus"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_0"
          android:background="@color/black"
          android:text="@string/zero"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_point"
          android:layout_columnSpan="2"
          android:layout_columnWeight="1"
          android:background="@color/black"
          android:text="@string/point"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          />

      <Button
          android:id="@+id/but_equal"


          android:background="@color/black"
          android:text="@string/equal"
          android:textColor="@color/white"
          android:textSize="@dimen/textSize_2"
          tools:ignore="HardcodedText"/>

   </GridLayout>
</LinearLayout>
